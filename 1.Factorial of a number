#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;

    int fact = 1;
    if (n == 0 || n == 1) {
        // Fact of 0 and 1 is 1
        fact = 1;
    } else {
        for (int i = 2; i <= n; ++i) {
            fact = fact * i;
        }
    }

    cout << "Factorial of " << n << " is " << fact << endl;
    return 0;
}
